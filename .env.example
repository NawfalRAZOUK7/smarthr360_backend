# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# SQLite (default): sqlite:///db.sqlite3
# PostgreSQL: postgresql://user:password@localhost:5432/dbname
# MySQL: mysql://user:password@localhost:3306/dbname
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@smarthr360.com

# CORS Configuration
# Add your frontend URLs (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings (Production)
# Set these to True in production with HTTPS
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# JWT Settings
# Access token lifetime in minutes
JWT_ACCESS_TOKEN_LIFETIME=15
# Refresh token lifetime in days
JWT_REFRESH_TOKEN_LIFETIME=7
# Enable token rotation for better security
JWT_ROTATE_REFRESH_TOKENS=True
# Blacklist old tokens after rotation
JWT_BLACKLIST_AFTER_ROTATION=True

# Admin Panel Security
# Set to False to disable admin panel in production
ADMIN_ENABLED=True
# Comma-separated list of IPs allowed to access admin (leave empty to allow all)
ADMIN_IP_WHITELIST=
